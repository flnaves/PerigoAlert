<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >



    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rboRoubo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roubo" />

    <RadioButton
        android:id="@+id/rboAssassinato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rboRoubo"
        android:text="Assassinato" />

    <RadioButton
        android:id="@+id/rboPDrogas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rboAssassinato"
        android:text="Ponto de Drogas" />

    <RadioButton
        android:id="@+id/rboRAutomoveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rboPDrogas"
        android:text="Roubo de Automoveis" />

    <RadioButton
        android:id="@+id/rboEstupro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rboRAutomoveis"
        android:text="Estupro" />



    </RadioGroup>

    <Button
        android:id="@+id/confirmar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Confirmar"
        android:layout_below="@id/radiogroup"/>

    <Button
        android:id="@+id/cancelar"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:text="Cancelar"
        android:layout_below="@id/confirmar"/>



</RelativeLayout>

